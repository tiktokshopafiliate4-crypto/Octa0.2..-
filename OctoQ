        // GANTI DENGAN GIST ID KAMU
        const GIST_ID = "GIST_ID_KAMU_DISINI";
        const GIST_FILENAME = "commands.json";

        function sendCommand() {
            let target = document.getElementById('targetNumber').value;
            let action = document.getElementById('action').value;
            let message = document.getElementById('customMessage').value;

            let command = {
                id: Date.now(), // ID unik
                target: target,
                action: action,
                message: message,
                status: "PENDING",
                timestamp: new Date().toISOString()
            };

            // SIMPAN PERINTAH KE GIST (ini butuh GitHub PAT untuk write, susah di web static)
            // ALTERNATIF MUDAH: Kita simpan perintah di localStorage dulu, lalu Tuan copy manual ke Gist.
            alert("FITUR SIMPAN KE GIST MEMBUTUHKAN BACKEND. Untuk sementara, COPY data di bawah ini dan PASTE ke file commands.json di Gist kamu:\n\n" + JSON.stringify(command, null, 2));
            log("PERINTAH DIBUAT: " + JSON.stringify(command));
        }

        function log(text) {
            let logDiv = document.getElementById('log');
            logDiv.innerHTML = "[" + new Date().toLocaleTimeString() + "] " + text + "<br>" + logDiv.innerHTML;
        }
    </script>
